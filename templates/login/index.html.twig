{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div id="circle" class="circle"></div>


    <!-- Page Content -->
<body>

    <div class="container">
        <div class="card border-0 shadow my-5">
            <div class="card-body p-5">
                <h1 class="fw-light">Se connecter :</h1>
                <p class="lead">Rentrez votre Login ainsi que votre mot de passe.</p>
                <form action="{{ path('app_login') }}" method="post">
                    <label for="username">Login: </label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}"/>
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="_password"/>
                    <br>
                    <button class="button"><span>login </span><br></button>


                    <input type="hidden" name="_target_path" value="/login"/>

                    <div class="user-widget">
                        <a href="{{ path('app_logout') }}">Se d√©connecter</a>


                    </div>

                </form>
            </div>
        </div>
    </div>

{% endblock %}


